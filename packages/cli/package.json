{
  "name": "flowts",
  "version": "0.10.8",
  "description": "Utility script to convert flow typed code to typescript",
  "bin": {
    "flowts": "./bin/flowts.js"
  },
  "scripts": {
    "cover": "jest --coverage",
    "report-coverage": "codecov",
    "test": "jest",
    "clean": "rimraf dist",
    "prepublishOnly": "yarn run clean && tsc -b --force",
    "build": "tsc -b",
    "ts-node": "ts-node"
  },
  "files": [
    "bin/*",
    "dist/*",
    "readme.md"
  ],
  "keywords": [],
  "author": "Bogdan Savluk <savluk.bogdan@gmail.com>",
  "license": "MIT",
  "repository": "https://github.com/zxbodya/flowts/tree/master/packages/cli",
  "dependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-flow-strip-types": "^7.9.0",
    "@babel/plugin-transform-typescript": "^7.9.4",
    "@babel/preset-flow": "^7.9.0",
    "@babel/preset-typescript": "^7.9.0",
    "@babel/traverse": "^7.9.5",
    "@babel/types": "7.9.0",
    "@types/debug": "^4.1.5",
    "@zxbodya/babel-plugin-flow-to-typescript": "^0.10.8",
    "@zxbodya/recast": "^0.18.9",
    "commander": "^5.0.0",
    "debug": "^4.1.1",
    "execa": "^4.0.1",
    "globby": "^11.0.0",
    "jest-diff": "^26.0.1",
    "ora": "^4.0.3",
    "prettier": "^2.0.4",
    "source-map-support": "^0.5.16",
    "typescript": "^3.9.2"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.9.5",
    "@babel/preset-env": "^7.9.5",
    "@types/babel__core": "^7.1.6",
    "@types/babel__traverse": "7.0.9",
    "@types/glob": "^7.1.1",
    "@types/jest": "^25.2.2",
    "@types/ora": "^3.2.0",
    "@types/prettier": "^2.0.0",
    "codecov": "^3.6.5",
    "jest": "^26.0.1",
    "rimraf": "^3.0.2",
    "ts-node": "^8.10.1"
  },
  "jest": {
    "testEnvironment": "node",
    "modulePathIgnorePatterns": [
      "dist"
    ]
  }
